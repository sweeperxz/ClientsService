<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Clients</title>
    <link rel="stylesheet" href="/webjars/bootstrap/5.1.0/css/bootstrap.min.css"/>


</head>
<body>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 text-center">
            <div class="section-title">
                <h2>Clients</h2>
            </div>
        </div>
    </div>
    <div class="clients">
        <table class="table table-bordered table-dark">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Surname</th>
                <th scope="col">Name</th>
                <th scope="col">Patronymic</th>
                <th scope="col">Birth date</th>
                <th scope="col">Gender</th>
                <th scope="col">Email</th>
                <th scope="col">Update</th>
            </tr>
            </thead>
            <tbody>
            {{#clients}}
                <tr>
                    <td> {{id}}</td>
                    <td>{{surname}}</td>
                    <td>{{name}}</td>
                    <td>{{patronymic}}</td>
                    <td>{{birthDate}}</td>
                    <td>{{gender}}</td>
                    <td>{{email}}</td>
                    <td>
                        <form action="clientUpdateForm">
                            <input type="hidden" name="id" value="{{id}}">
                            <input type="submit" value="...">
                        </form>
                    </td>
                </tr>
            {{/clients}}
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 text-center">
        <div class="section-title">
            <h2>Add new client</h2>
        </div>
    </div>
</div>
<div class="container-fluid d-flex justify-content-center align-items-center">
    <div class="row">
    <form action="newClientForm" method="post">
            <div class="form-group form-control-lg d-flex justify-content-between align-items-center">
                <label for="inputSurname" class="sr-only mx-3">Surname: </label>
                <input name="surname"  type="text" id="inputSurname">
            </div>
            <div class="form-group form-control-lg d-flex justify-content-between align-items-center">
                <label for="inputName" class="sr-only mx-3">Name: </label>
                <input name="name" type="text" id="inputName" >
            </div>
            <div class="form-group form-control-lg d-flex justify-content-between align-items-center">
                <label for="inputPatronymic" class="sr-only mx-3">Patronymic: </label>
                <input name="patronymic" type="text" id="inputPatronymic">
            </div>
                <div class="form-group form-control-lg d-flex justify-content-between align-items-center">
                    <label for="inputBirthDate" class="sr-only mx-3">Birth date: </label>
                    <input name="birthDate" type="date" id="inputBirthDate">
                </div>
                <div class="form-group form-control-lg d-flex justify-content-between align-items-center">
                    <label for="inputEmail" class="sr-only mx-3">Email: </label>
                    <input name="email" type="text" id="inputEmail">
                </div>
                <div class="form-group form-control-lg d-flex justify-content-between align-items-center">
                    <label for="inputGender" class="sr-only mx-3">Gender: </label>
                    <select name="gender" id="inputGender" class="form-control" >
                        <option selected>NONE</option>
                        <option>MALE</option>
                        <option>FEMALE</option>
                    </select>
                </div>
            <div class="form-group form-control-lg container">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
    </form>
    </div>
</div>


</body>
</html>

